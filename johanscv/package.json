{
  "name": "johanscv",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "bash ./scripts/dev-fixed.sh",
    "lint": "eslint src --max-warnings=0",
    "smoke": "node ./scripts/smoke-check.mjs",
    "build": "vite build",
    "build:custom-domain": "CUSTOM_DOMAIN=true vite build",
    "check:bundle": "node ./scripts/check-bundle-budget.mjs",
    "preview": "vite preview",
    "optimize:favicon": "svgo --multipass -i public/images/favicon-round.svg -o public/images/favicon-round.svg",
    "verify:custom-domain-build": "node ./scripts/verify-custom-domain-build.mjs",
    "predeploy": "npm run build:custom-domain && npm run verify:custom-domain-build",
    "deploy": "gh-pages -d dist --no-history"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "eslint": "^9.22.0",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.6",
    "svgo": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "vite": "^7.3.1"
  }
}
